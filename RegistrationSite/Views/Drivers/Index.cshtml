@model IEnumerable<RegistrationSite.Models.Driver>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<div >

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Province)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostalCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LicenseNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LicenseExpiry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DriverPhoto)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LicenseNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LicenseExpiry)
                    </td>
                    <td>
                        @if (item.DriverPhoto != null)
                        {
                            <img src="~/img/drivers/@item.DriverPhoto" alt="Driver Photo" width="65" />
                        }
                    </td>
                    <td>
                        <a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                        <a class="btn btn-light btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-light btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <form method="post" enctype="multipart/form-data" asp-controller="Drivers" asp-action="Index">
        <div class="custom-file">
            <input class="custom-file-input" name="files" type="file" id="customFile" />
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <div class="form-group">
            <input class="btn btn-success btn-block" type="submit" value="Upload New Driver" />
        </div>
    </form>
